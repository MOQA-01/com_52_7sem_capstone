# Jal Jeevan Mission - Environment Variables
# Copy this file to .env and update with your actual values

# Application
DEBUG=false
APP_NAME="Jal Jeevan Mission Platform"

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jal_jeevan_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MQTT
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=jjm_user
MQTT_PASSWORD=jjm_secure_mqtt_password

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-very-secure-secret-key-minimum-32-characters-long-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (use * for all origins or comma-separated list)
CORS_ORIGINS=*

# ML Model
ML_MODEL_PATH=ml/models
ML_ANOMALY_THRESHOLD=0.5
ML_PREDICTION_INTERVAL=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/jjm_platform.log
